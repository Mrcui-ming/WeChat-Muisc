#search{
  height: 100vh;
  width: 100vw;
}
.search-box{
  height: 80rpx;
  padding: 15rpx 10rpx;
  background-color: #ccc;
}
.search-container{
  display: flex;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 90rpx;
  background-color: #fff;
}
.search-container view:nth-child(1),
.search-container view:nth-child(3){
  width: 90rpx;
  height: 100%;
}
.search-container view:nth-child(2){
  flex: 1;
  height: 90rpx;
  text-align: left;
}
.search-container view:nth-child(2) input{
  margin-top: 16rpx;
}
.search-container image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 16rpx;
}
.hot-search{
  padding: 70rpx 20rpx;
}
.hot-search-title{
  font-size: 38rpx;
  font-weight: 700;
  margin-bottom: 15rpx;
}
.musicitem{
  display: inline-block;
  font-size: 30rpx;
  color: #777;
  padding: 2rpx 10rpx;
  margin: 0 20rpx 15rpx 0;
  border: 1px solid #666;
  border-radius: 7rpx;
}